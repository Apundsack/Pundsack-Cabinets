.carousel-indicators {
  margin-top: 20px;
  display: flex;
  justify-content: center;
  gap: 10px;
}

.carousel-indicators span {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #ccc;
  cursor: pointer;
}

.carousel-indicators .active {
  background-color: #333;
}

.carousel-item p {
  width: 50vw;
  margin: 0 auto;
}




