.radialMenu {
  transform-origin: left center;
  z-index: 100; 
  position: fixed; 
  left: 120px;
  transform: rotate(-90deg); 
  transition: transform 0.75s ease-out; 
}


.radialMenu.active {
  transform: rotate(0deg); 
}

.menuOption {
  position: absolute;
  width: 35vw;  
  height: 150px;  
  background: repeating-linear-gradient(
    to right,  
    #F0C7A3,   
    #F0C7A3 20%,
    #E5A98B 20%,
    #E5A98B 40%,
    #D17C5A 40%,
    #D17C5A 60%,
    #B84A3A 60%,
    #B84A3A 80%,
    #9D2719 80%, 
    #9D2719 100% 
  );
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: white;
  font-size: 16px;
  font-weight: bold;
  border-radius: 5px;
  z-index: 10;
  transition: transform 0.3s ease-out;
  justify-content: right;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.15); 
  border: 5px solid white; 
}



.option1 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;
}

.option2 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;
}

.option3 {
  transform-origin: left center;
