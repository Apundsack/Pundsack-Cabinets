<header>

  <style>
   .logoBanner {
    background-color: white;
    height: 100px; /* Adjust the height to ensure the pseudo-element fits */
    width: 120px; /* Adjust width for responsiveness */
    max-width: 1200px; /* Limit the width to avoid stretching */
    margin: 50px 0 0 -1px; /* Center the banner and add space from the top */
    border-radius: 0 20px 20px 0;
    position: relative; /* Position relative for pseudo-element positioning */
    display: flex;
    justify-content: center; /* Center the logo */
    align-items: center; /* Vertically center the logo */
  }

  .logo {
    background-image: url(/images/imagery/Logo.png);
    background-size: contain; /* Ensure logo is contained and not stretched */
    background-repeat: no-repeat; /* Prevent repeating the logo */
    background-position: center; /* Center the logo inside the div */
    height: 149px;
    width: 100px;
  }

  /* Add a pseudo-element to the top */
  .logoBanner::before {
    content: "";
    position: absolute;
    top: -40px; /* Adjust to position the element just above the banner */
    left: 0px;
    height: 40px;
    width: 40px;
    background: transparent;
    border-bottom-left-radius: 50%; /* Create a rounded corner on the top right */
    box-shadow: -20px 20px 0 0 var(--white); /* Shadow effect */
  }

  /* Keep the original pseudo-element */
  .logoBanner::after {
    content: "";
    position: absolute;
    bottom: -40px; /* Adjust to position the element just below the banner */
    left: 0;
    height: 40px;
    width: 40px;
    background: transparent;
    border-top-left-radius: 50%; /* Create the inverse corner effect */
    box-shadow: -20px -20px 0 0 var(--white); /* Shadow effect */
  }

/* Keep the original styles for the radialMenu and menu options */
.radialMenu {
  transform-origin: left center;
  z-index: 100; /* Ensure the menu is on top */
  position: absolute; /* Fixed position to stay in place */
  left: 120px;
  transform: rotate(-90deg); /* Start the radial menu rotated */
  transition: transform 0.75s ease-out; /* Smooth transition for the menu rotation with ease-out */
}

/* Show the radial menu when active */
.radialMenu.active {
  transform: rotate(0deg); /* Rotate to original position when active */
}

.menuOption {
  position: absolute;
  width: 35vw;  /* The width of each swatch */
  height: 150px;  /* The height of each swatch */
  background: repeating-linear-gradient(
    to right,  /* Gradient direction (horizontal) */
    #F0C7A3,   /* Starting red */
    #F0C7A3 20%, /* First shade of red */
    #E5A98B 20%, /* Lighter red */
    #E5A98B 40%, /* Second shade of red (lightened) */
    #D17C5A 40%, /* Lighter peachy red */
    #D17C5A 60%, /* Third shade (peachy) */
    #B84A3A 60%, /* Very light peach */
    #B84A3A 80%, /* Fourth shade (pale peach) */
    #9D2719 80%, /* Almost pink */
    #9D2719 100% /* Lightest pink */
  );
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: white;
  font-size: 16px;
  font-weight: bold;
  border-radius: 5px; /* Optional, rounded corners for the swatches */
  z-index: 10;
  transition: transform 0.3s ease-out;  /* Smooth transition for rotation with ease-out */
  justify-content: right;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.15); /* Optional, shadow for depth */
  border: 5px solid white; /* White border around the entire .menuOption */
}



.option1 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;  /* Smooth transition for rotation with ease-out */
}

.option2 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;  /* Smooth transition for rotation with ease-out */
}

.option3 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;  /* Smooth transition for rotation with ease-out */
}

.option4 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;  /* Smooth transition for rotation with ease-out */
}


/* When the radial menu is active, rotate each option */
.radialMenu.active .option1 {
  transform-origin: left center;
  transform: rotate(5deg);
}

.radialMenu.active .option2 {
  transform-origin: left center;
  transform: rotate(28deg);
}

.radialMenu.active .option3 {
  transform-origin: left center;
  transform: rotate(51deg);
}

.radialMenu.active .option4 {
  transform-origin: left center;
  transform: rotate(74deg);
}

.menuOption a {
  color: white;
  text-decoration: none;
  display: block; /* Make the anchor tag a block element to take full width and height */
  transform: rotate(-90deg);  /* Rotate the text by -90 degrees */
  white-space: nowrap;  /* Prevent text from wrapping */
  padding: 10px 0; /* Adjust padding to make the text fit inside the element */
}

  </style>
<!-- Radial Menu -->
<div class="radialMenu" id="radialMenu">
  <div class="menuOption option1"><a href="/">Home</a></div>
  <div class="menuOption option2"><a href="/about">About Us</a></div>
  <div class="menuOption option3"><a href="/gallery">Gallery</a></div>
  <div class="menuOption option4"><a href="/contact">Contact Us</a></div>
</div>


  <div class="logoBanner" onclick="toggleRadialMenu()">
    <div class="logo"></div>
</div>


    <script>
      function toggleRadialMenu() {
        const radialMenu = document.getElementById('radialMenu');
        radialMenu.classList.toggle('active');
      }
    </script>
    <script>
      // Get the current page path (e.g., "/gallery", "/home", etc.)
      const pagePath = window.location.pathname;

      // Save the scroll position when the user scrolls
      window.addEventListener('scroll', () => {
          sessionStorage.setItem(`scrollPosition_${pagePath}`, window.scrollY);
      });

      // Retrieve and apply the scroll position on page load
      window.addEventListener('load', () => {
          const savedScrollPosition = sessionStorage.getItem(`scrollPosition_${pagePath}`);
          if (savedScrollPosition) {
              window.scrollTo(0, savedScrollPosition);
          }
      });
  </script>

  <script>
      window.addEventListener("beforeunload", function () {
        document.body.classList.add("fade-out");
      });
  </script>
</header>
  