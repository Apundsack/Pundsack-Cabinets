  transition: transform 0.9s ease-out;
}

.option4 {
  transform-origin: left center;
  transform: rotate(0deg);
  transition: transform 0.9s ease-out;
}


/* When the radial menu is active, rotate each option */
.radialMenu.active .option1 {
  transform-origin: left center;
  transform: rotate(5deg);
}

.radialMenu.active .option2 {
  transform-origin: left center;
  transform: rotate(28deg);
}

.radialMenu.active .option3 {
